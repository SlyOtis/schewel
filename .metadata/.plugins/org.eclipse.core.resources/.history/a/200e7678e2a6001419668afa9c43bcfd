import java.awt.BorderLayout;
import java.awt.Container;
import java.awt.FlowLayout;

import javax.swing.*;

public class Oblig13GUI extends JFrame {
	static int frame_width = 700;
	static int frame_height = 500;
	static int status_height = 20;
	
	public static void main(String[] args){
		Oblig13GUI() frame = new Oblig13GUI();
		frame.build();
		frame.setSize(frame_width, frame_height);
		frame.setLayout(new BorderLayout());
		
		Container cont = new Container();
		cont.setLayout(new BoxLayout(cont, BoxLayout.X_AXIS));
		
		Oblig13StatusBar status = new Oblig13StatusBar(status_height);
		JButton save = new JButton("Lagre");
		JButton open = new JButton("Åpne");
		JButton add = new JButton("Ny Vare");
		JButton remove = new JButton("Selg");
		JButton xml = new JButton("Endre XML");
		Oblig13List list = new Oblig13List(status);
		
		cont.add(save);
		cont.add(open);
		cont.add(add);
		cont.add(remove);
		cont.add(xml);
		frame.add(cont, BorderLayout.PAGE_START);
		frame.add(list, BorderLayout.CENTER);
		frame.add(status, BorderLayout.PAGE_END);
		frame.setVisible(true);
	}
	private void build(){
		
	}
}
